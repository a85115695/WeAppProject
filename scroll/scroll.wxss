.scroll {
	width: 100%;
	height: 160rpx;
	background: #FCFCFC;
	overflow: hidden;
}

.scroll-view {
	white-space: nowrap;
	display: flex;
}

.active {
	border: 5rpx solid skyblue;
	border-radius: 10rpx;
	box-sizing: border-box;
}

.Content {
  margin-top: 10rpx;
  width: 100%;
  display: -webkit-box;
  -webkit-overflow-scrolling: touch;
}

.List {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  text-align: center;
}

.bgImg {
  margin-left: 25rpx;
  margin-top: 10rpx;
  display: block;
  height: 100rpx;
  width: 100rpx;
}

.bgText {
	font-size: 20rpx;
	color: #ccc;
}

.textActive {
	color: black;
}